{
  "name": "micro-auth",
  "version": "1.0.0",
  "description": "NodeJS Microservice based on JWT for managing authentication",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "NODE_ENV=test DEBUG=micro-auth jest --verbose --coverage",
    "dev": "NODE_ENV=development DEBUG=micro-auth babel-node --presets es2015 index.js",
    "start": "NODE_ENV=production DEBUG=micro-auth babel-node --presets es2015 index.js",
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files"
  },
  "dependencies": {
    "debug": "^4.1.0",
    "express": "^4.16.4",
    "jest": "^23.6.0",
    "mongoose": "^5.3.11",
    "mysql": "^2.16.0",
    "uuid": "^3.3.2",
    "validator": "^10.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "rimraf": "^2.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgsaravana/micro-auth.git"
  },
  "keywords": [
    "authentication",
    "jwt",
    "microservice"
  ],
  "author": "Saravana",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sgsaravana/micro-auth/issues"
  },
  "homepage": "https://github.com/sgsaravana/micro-auth#readme",
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**"
    ]
  }
}
