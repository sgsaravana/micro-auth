{
  "name": "micro-auth",
  "version": "1.0.0",
  "description": "NodeJS Microservice based on JWT for managing authentication",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "NODE_ENV=test DEBUG=micro-auth jest --verbose --coverage --forceExit --detectOpenHandles",
    "dev": "NODE_ENV=development DEBUG=micro-auth babel-node --presets es2015 server.js",
    "watch": "babel-watch server.js",
    "start": "NODE_ENV=production DEBUG=micro-auth babel-node --presets es2015 server.js",
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.0",
    "moment": "^2.26.0",
    "uuid": "^3.3.2",
    "validator": "^10.11.0",
    "winston": "^3.2.1",
    "mongoose": "^5.12.8",
    "mysql": "^2.16.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "husky": "^4.2.5",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "babel-watch": "^7.4.1",
    "eslint": "^7.1.0",
    "eslint-plugin-jest": "^23.13.2",
    "jest": "^26.0.1",
    "superagent": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgsaravana/micro-auth.git"
  },
  "keywords": [
    "authentication",
    "jwt",
    "microservice"
  ],
  "author": "Saravana",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sgsaravana/micro-auth/issues"
  },
  "homepage": "https://github.com/sgsaravana/micro-auth#readme",
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**"
    ]
  }
}
